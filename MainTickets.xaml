<Window x:Class="RailwayTickets.MainTickets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailwayTickets"
        mc:Ignorable="d"
        Title="Билеты" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="800" MinHeight="450">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top" Background="White">
            <MenuItem x:Name="menuItemFile" Header="Файл" Height="21" Width="60">
                <MenuItem x:Name="menuItemSave" Header="Сохранить..." Click="menuItemSave_Click"/>
                <MenuItem x:Name="menuItemLoad" Header="Загрузить..." Click="menuItemLoad_Click"/>
                <MenuItem x:Name="menuItemExit" Header="Выход" Click="menuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="Вид" Width="35">
                <MenuItem x:Name="menuItemEdit" Header="Редактировать" Click="menuItemEdit_Click"/>
            </MenuItem>
        </Menu>
        <TabControl Margin="0,23,0,-23">
            <TabItem Header="Поезда дальнего следования">
                <Canvas x:Name="gridFarAway" Background="White">
                    <Viewbox HorizontalAlignment="Left" Height="53" Canvas.Left="10" Stretch="Fill" Canvas.Top="10" VerticalAlignment="Top" Width="120">
                        <Grid Height="52.96" Width="120">
                            <Label x:Name="lblTrainType" Content="Тип вагона" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <ComboBox x:Name="comboBoxTrainType" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,31,0,0">
                                <ComboBoxItem Content="Плацкарт"/>
                                <ComboBoxItem Content="Купе"/>
                            </ComboBox>
                        </Grid>
                    </Viewbox>
                    <Label x:Name="lblPassengerData" Content="Данные пассажира" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="222" Canvas.Top="18"/>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="182" Stretch="Fill" Canvas.Top="62" VerticalAlignment="Center" Width="161">
                        <Grid Height="25.960000000000008" Width="161">
                            <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="41,0,0,0"/>
                            <Label x:Name="lblPassengerName" Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="156" Stretch="Fill" Canvas.Top="88" VerticalAlignment="Center" Width="187">
                        <Grid Height="25.960000000000008" Width="187">
                            <TextBox x:Name="txtBoxLastName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="67,0,0,0"/>
                            <Label x:Name="lblPassengerLastName" Content="Фамилия:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="155" Stretch="Fill" Canvas.Top="119" VerticalAlignment="Center" Width="188">
                        <Grid Height="25.960000000000008" Width="188">
                            <TextBox x:Name="txtBoxPatronymic" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="68,0,0,0"/>
                            <Label x:Name="lblPassengerPatronymic" Content="Отчество:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="183" Stretch="Fill" Canvas.Top="147" VerticalAlignment="Top" Width="160">
                        <Grid Height="25.960000000000008" Width="160">
                            <ComboBox x:Name="comboBoxPassengerSex" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="40,0,0,0">
                                <ComboBoxItem Content="Мужской"/>
                                <ComboBoxItem Content="Женский"/>
                            </ComboBox>
                            <Label x:Name="lblPassengerSex" Content="Пол:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="115" Stretch="Fill" Canvas.Top="173" VerticalAlignment="Center" Width="229">
                        <Grid Height="25.960000000000008" Width="229">
                            <TextBox x:Name="txtBoxPassSerie" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" MaxLength="4" Margin="109,0,0,0"/>
                            <Label x:Name="lblPassSerie" Content="Серия паспорта: " HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="114" Stretch="Fill" Canvas.Top="199" VerticalAlignment="Center" Width="230">
                        <Grid Height="25.960000000000008" Width="230">
                            <TextBox x:Name="txtBoxPassNum" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" MaxLength="6" Margin="110,0,0,0"/>
                            <Label x:Name="lblPassNum" Content="Номер паспорта:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                    <CheckBox x:Name="checkBoxNoPatronymic" Content="Нет отчества" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="checkBoxNoPatronymic_Checked" Unchecked="checkBoxNoPatronymic_Unchecked" Canvas.Left="348" Canvas.Top="124"/>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="525" Stretch="Fill" Canvas.Top="31" VerticalAlignment="Top" Width="271">
                        <Grid Height="25.96" Width="271">
                            <Label x:Name="lblStationFrom" Content="Станция отправления:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxStationFrom" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" TextSearch.TextPath="Name" Margin="151,0,0,0">
                                <ComboBoxItem Content="Пермь-2"/>
                                <ComboBoxItem Content="Пермь-1"/>
                                <ComboBoxItem Content="Чусовой"/>
                                <ComboBoxItem Content="Калино"/>
                            </ComboBox>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Canvas.Left="532" Stretch="Fill" Canvas.Top="62" VerticalAlignment="Top" Width="264">
                        <Grid Height="25.960000000000008" Width="264">
                            <Label x:Name="lblStationTo" Content="Станция назначения:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxStationTo" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Margin="144,0,0,0"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="545" Stretch="Fill" Canvas.Top="92" VerticalAlignment="Center" Width="251">
                        <Grid Height="25.960000000000008" Width="251">
                            <Label x:Name="lblDateFrom" Content="Дата отправления:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtBoxDateFrom" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Margin="131,0,0,0"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="573" Stretch="Fill" Canvas.Top="119" VerticalAlignment="Center" Width="223">
                        <Grid Height="25.960000000000008" Width="223">
                            <Label x:Name="lblNumPlace" Content="Номер места:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Margin="103,0,0,0"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox HorizontalAlignment="Left" Height="26" Canvas.Left="601" Stretch="Fill" Canvas.Top="147" VerticalAlignment="Center" Width="195">
                        <Grid Height="25.960000000000008" Width="195">
                            <Label x:Name="lblFullPrice" Content="Льготы:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Margin="75,0,0,0"/>
                        </Grid>
                    </Viewbox>
                    <Button x:Name="btnPrint" Content="Печать" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1861" Canvas.Top="777"/>
                    <Label x:Name="lblIsEditMode" Content="Не в режиме редактирования" Canvas.Left="45" Canvas.Top="723" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </Canvas>
            </TabItem>
            <TabItem Header="Пригородные поезда">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
