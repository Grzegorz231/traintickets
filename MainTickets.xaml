<Window x:Class="RailwayTickets.MainTickets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailwayTickets"
        mc:Ignorable="d"
        Title="Билеты" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="800" MinHeight="450">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top" Background="White">
            <MenuItem x:Name="menuItemFile" Header="Файл" Height="21" Width="60">
                <MenuItem x:Name="menuItemSave" Header="Сохранить..." Click="menuItemSave_Click"/>
                <MenuItem x:Name="menuItemLoad" Header="Загрузить..." Click="menuItemLoad_Click"/>
                <MenuItem x:Name="menuItemExit" Header="Выход" Click="menuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="Вид" Width="35">
                <MenuItem x:Name="menuItemEdit" Header="Редактировать" Click="menuItemEdit_Click"/>
            </MenuItem>
        </Menu>
        <TabControl Margin="0,23,0,-23">
            <TabItem Header="Поезда дальнего следования">
                <Canvas x:Name="gridFarAway" Background="White">
                    <Label x:Name="lblTrainType" Content="Тип вагона" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="10"/>
                    <ComboBox x:Name="comboBoxTrainType" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="10" Canvas.Top="41">
                        <ComboBoxItem Content="Плацкарт"/>
                        <ComboBoxItem Content="Купе"/>
                    </ComboBox>
                    <Label x:Name="lblPassengerData" Content="Данные пассажира" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="222" Canvas.Top="18"/>
                    <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="223" Canvas.Top="66"/>
                    <Label x:Name="lblPassengerName" Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="182" Canvas.Top="62"/>
                    <TextBox x:Name="txtBoxLastName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="223" Canvas.Top="92"/>
                    <Label x:Name="lblPassengerLastName" Content="Фамилия:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="156" Canvas.Top="88"/>
                    <TextBox x:Name="txtBoxPatronymic" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="223" Canvas.Top="123"/>
                    <Label x:Name="lblPassengerPatronymic" Content="Отчество:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="155" Canvas.Top="119"/>
                    <ComboBox x:Name="comboBoxPassengerSex" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="223" Canvas.Top="147">
                        <ComboBoxItem Content="Мужской"/>
                        <ComboBoxItem Content="Женский"/>
                    </ComboBox>
                    <Label x:Name="lblPassengerSex" Content="Пол:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="183" Canvas.Top="147"/>
                    <TextBox x:Name="txtBoxPassSerie" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" MaxLength="4" Canvas.Left="224" Canvas.Top="177"/>
                    <Label x:Name="lblPassSerie" Content="Серия паспорта: " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="115" Canvas.Top="173"/>
                    <TextBox x:Name="txtBoxPassNum" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MaxLength="6" Canvas.Left="224" Canvas.Top="203"/>
                    <Label x:Name="lblPassNum" Content="Номер паспорта:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="114" Canvas.Top="199"/>
                    <CheckBox x:Name="checkBoxNoPatronymic" Content="Нет отчества" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="checkBoxNoPatronymic_Checked" Unchecked="checkBoxNoPatronymic_Unchecked" Canvas.Left="348" Canvas.Top="124"/>
                    <Label x:Name="lblStationFrom" Content="Станция отправления:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="525" Canvas.Top="31"/>
                    <Label x:Name="lblStationTo" Content="Станция назначения:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="532" Canvas.Top="62"/>
                    <ComboBox x:Name="comboBoxStationFrom" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" TextSearch.TextPath="Name" Canvas.Left="676" Canvas.Top="33">
                        <ComboBoxItem Content="Пермь-2"/>
                        <ComboBoxItem Content="Пермь-1"/>
                        <ComboBoxItem Content="Чусовой"/>
                        <ComboBoxItem Content="Калино"/>
                    </ComboBox>
                    <ComboBox x:Name="comboBoxStationTo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="676" Canvas.Top="64"/>
                    <Label x:Name="lblDateFrom" Content="Дата отправления:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="545" Canvas.Top="92"/>
                    <TextBox x:Name="txtBoxDateFrom" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="676" Canvas.Top="96"/>
                    <Label x:Name="lblNumPlace" Content="Номер места:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="573" Canvas.Top="119"/>
                    <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="676" Canvas.Top="121"/>
                    <Label x:Name="lblFullPrice" Content="Льготы:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="601" Canvas.Top="147"/>
                    <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="676" Canvas.Top="149"/>
                    <Button x:Name="btnPrint" Content="Печать" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1861" Canvas.Top="777"/>
                    <Label x:Name="lblIsEditMode" Content="Не в режиме редактирования" Canvas.Left="45" Canvas.Top="723" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </Canvas>
            </TabItem>
            <TabItem Header="Пригородные поезда">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
